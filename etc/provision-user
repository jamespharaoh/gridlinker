echo "=== configuring environment" >&2

ssh-add -l

ln -snf /vagrant/etc/bash-profile /home/vagrant/.bash_profile
ln -snf /vagrant/etc/bash-rc /home/vagrant/.bashrc

cd /vagrant

PROJECTS=(
	"wistla-api:master"
	"wistla-web:master"
)

for project in "${PROJECTS[@]}"; do

	IFS=":" read project_name project_branch <<< "$project"

	if test -d $project_name; then continue; fi

	echo "=== checking out $project_name" >&2
	
	git clone "git@github.com:wistla/$project_name.git" \
		--branch "$project_branch"

done

# ex: noet ts=4 filetype=sh
