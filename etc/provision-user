echo "=== configuring environment" >&2

ssh-add -l

ln -snf /vagrant/etc/bash-profile /home/vagrant/.bash_profile
ln -snf /vagrant/etc/bash-rc /home/vagrant/.bashrc

cd /vagrant

PROJECTS=(
	"wistla-api"
	"wistla-web"
)

for project in "${PROJECTS[@]}"; do

	if test -d $project; then continue; fi

	echo "=== checking out $project" >&2
	
	git clone "git@github.com:wistla/$project.git"

done

# ex: noet ts=4 filetype=sh
