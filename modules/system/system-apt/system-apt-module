      source: "{{ ubuntu_release }}-updates"
      repositories: "{{ ubuntu_repositories }}"

    - url: "{{ ubuntu_security }}"
      source: "{{ ubuntu_release }}-security"
      repositories: "{{ ubuntu_repositories }}"

