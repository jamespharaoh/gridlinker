---

container_type: "database-slave"

start_image: "{{ docker_registry }}/{{ docker_images.database }}:{{ cluster.build }}"

start_expose:
  - "5432"

start_ports:
  - "{{ devbox_private }}:{{ cluster.ports.database_slave }}:5432"

start_env:
  - "DATABASE_MODE=slave"
  - "DATABASE_MASTER_HOSTNAME={{ devbox_private }}"
  - "DATABASE_MASTER_PORT={{ cluster.ports.database_master }}"

start_wait:
  - "{{ cluster.ports.database_slave }}"

