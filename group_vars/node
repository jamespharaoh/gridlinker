---

private_gateway: "{{
  [
    cluster_deployment.bridge_network,
    instance_index,
    cluster_zone_indices [instance_zone] * 64 + 1,
  ] | join ('.') if deployment_mode in [
    'cluster-shared',
    'cluster-alias',
    'cluster-simple',
  ] else [
    deployment.bridge_network,
    '0.1',
  ] | join ('.')
}}"

private_bits: "{{
  26 if deployment_mode in [
    'cluster-shared',
    'cluster-alias',
    'cluster-simple',
  ] else 16
}}"

