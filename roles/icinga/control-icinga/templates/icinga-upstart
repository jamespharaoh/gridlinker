description "icinga2"

{% if icinga_state == 'enabled' %}
start on runlevel [2345]
stop on runlevel [!2345]
{% endif %}

respawn
respawn limit unlimited

pre-start script

	mkdir -p /var/run/icinga2
	chown nagios.nagios /var/run/icinga2

end script

exec /usr/sbin/icinga2 daemon >/var/log/icinga2/startup.log

post-stop exec sleep 2
