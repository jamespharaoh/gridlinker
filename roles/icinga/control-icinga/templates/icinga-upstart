description "icinga2"

{% if icinga_state in [ 'starting', 'running' ] %}
start on runlevel [2345]
stop on runlevel [!2345]
{% endif %}

respawn
respawn limit unlimited

pre-start script

	if ! test -d /run/icinga2; then
		mkdir /run/icinga2
		chown nagios.nagios /run/icinga2
		chmod 0755 /run/icinga2
	fi

end script

exec /usr/sbin/icinga2 daemon >/var/log/icinga2/startup.log

post-stop exec sleep 2
