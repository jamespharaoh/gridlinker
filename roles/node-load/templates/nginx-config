user www-data;
worker_processes 4;
pid /run/nginx.pid;

events {
	worker_connections 768;
}

http {

	# basic settings

	sendfile on;
	tcp_nopush on;
	tcp_nodelay on;
	keepalive_timeout 65;
	types_hash_max_size 2048;

	include /etc/nginx/mime.types;
	default_type application/octet-stream;

	# logging

	access_log /var/log/nginx/access.log;
	error_log /var/log/nginx/error.log;

	# compression

	gzip on;
	gzip_disable "msie6";

	# proxy defaults

	proxy_connect_timeout 1s;
{% if debug == 'yes' %}
	proxy_read_timeout 10m;
{% else %}
	proxy_read_timeout 10s;
{% endif %}

	# upstream servers

	include upstream.conf;

	# api

	server {

		server_name api.{{ deployment_private_domain }};
{% if deployment_private_domain != deployment_public_domain %}
		server_name api.{{ deployment_public_domain }};
{% endif %}

		client_max_body_size 16m;

		location / {
			proxy_pass http://api;
			proxy_http_version 1.1;
			proxy_set_header Connection "";
		}

	}

	# web

	server {

		server_name {{ deployment_private_domain }};
		server_name www.{{ deployment_private_domain }};
{% if deployment_private_domain != deployment_public_domain %}
		server_name {{ deployment_public_domain }};
		server_name www.{{ deployment_public_domain }};
{% endif %}

		client_max_body_size 16m;

		location / {
			proxy_pass http://web;
			proxy_http_version 1.1;
			proxy_set_header Connection "";
		}

		location /in {
			proxy_pass http://browser;
			proxy_http_version 1.1;
			proxy_set_header Connection "";
		}

	}

}
