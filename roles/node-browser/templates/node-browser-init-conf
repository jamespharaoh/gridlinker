description "wistla browsers"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 1 5

env HOME=/home/ubuntu

script

	cd /home/ubuntu/wistla-browser

	setuid ubuntu \
	mkdir --parents logs

	exec >> logs/output.txt
	exec 2>> logs/output.txt

	exec setuid ubuntu \
{% if debug == 'yes' %}
	node-debug \
	--debug-brk=0 \
{% else %}
	stdbuf -oL -eL \
	nodejs \
	--trace_gc \
{% endif %}
	keystone.js

end script
