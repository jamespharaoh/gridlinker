lxc.network.flags = up
lxc.network.link = {{ deployments [deployment].bridge_name }}
lxc.network.hwaddr = {{ hw }}
lxc.network.ipv4 = {{ node_ip }}/16

lxc.start.auto = {{ 1 if autostart == "yes" else 0 }}
