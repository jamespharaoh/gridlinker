# {{ ansible_managed }}
<VirtualHost {{ interfaces|default('*') }}:{{ port|default('80') }}>
	ServerName {{ item.api_domain }}
	ServerAlias {{ item.api_domain }}.staging.datingnode.com

	ServerAdmin staging@rocketware.co.uk

	SetEnvIf Remote_Addr ^ SERVICE_DOMAIN={{ item.main_domain }}

	DocumentRoot {{platform_super_dir}}
	<Directory {{platform_super_dir}}>
		Options FollowSymLinks
		AllowOverride none
		Require all granted

		RewriteEngine on
        RewriteCond %{REQUEST_URI} !php$
        RewriteRule ^(.*)$ fcgi://127.0.0.1:9000/var/www/datingnode-super/api/pipe.php [P]

	</Directory>

	ProxyPassMatch ^/(.*\.php(/.*)?)$ fcgi://127.0.0.1:9000{{platform_super_dir}}$1

 	<Location />
		<IfModule mod_filter.c>
		<IfModule mod_deflate.c>
		AddOutputFilterByType DEFLATE application/atom+xml \
			application/javascript \
			application/json \
			application/rss+xml \
			application/vnd.ms-fontobject \
			application/x-font-ttf \
			application/xhtml+xml \
			application/xml \
			font/opentype \
			image/svg+xml \
			image/x-icon \
			text/css \
			text/html \
			text/plain \
			text/x-component \
			text/xml
		</IfModule>
		</IfModule>
	</Location>

	CustomLog {{ platform_log_dir }}service-api-apache-access.log combined
	ErrorLog {{ platform_log_dir }}service-api-apache-error.log
	LogLevel warn

</VirtualHost>