{{ ansible_warning ['//'] }}

template Host "generic-host" {

	max_check_attempts = 3
	check_interval = 30s
	retry_interval = 10s

	check_command = "hostalive"

	vars.notification ["mail"] = {
		groups = [ "shared" ]
	}

}

template Service "generic-service" {

	max_check_attempts = 5
	check_interval = 30s
	retry_interval = 10s

	vars.notification ["mail"] = {
		groups = [ "shared" ]
	}

}

template User "generic-user" {

}

template Notification "mail-host-notification" {

	command = "mail-host-notification"

	states = [
		Up,
		Down,
	]

	types = [
		Problem,
		Acknowledgement,
		Recovery,
		Custom,
		FlappingStart,
		FlappingEnd,
		DowntimeStart,
		DowntimeEnd,
		DowntimeRemoved,
	]

	period = "24x7"

}

template Notification "mail-service-notification" {

	command = "mail-service-notification"

	states = [
		OK,
		Warning,
		Critical,
		Unknown,
	]

	types = [
		Problem,
		Acknowledgement,
		Recovery,
		Custom,
		FlappingStart,
		FlappingEnd,
		DowntimeStart,
		DowntimeEnd,
		DowntimeRemoved,
	]

	period = "24x7"

}
