{{ ansible_warning ['#'] }}

# communication

Port 22
Protocol 2
TCPKeepAlive yes

# security

HostKey /etc/ssh/ssh_host_rsa_key
HostKey /etc/ssh/ssh_host_ecdsa_key
HostKey /etc/ssh/ssh_host_ed25519_key

UsePrivilegeSeparation yes
KeyRegenerationInterval 3600
ServerKeyBits 1024
UseDNS no

# logging

SyslogFacility AUTH
LogLevel INFO

# authentication

LoginGraceTime 120
PermitRootLogin without-password
StrictModes yes
RSAAuthentication yes
PubkeyAuthentication yes
IgnoreRhosts yes
RhostsRSAAuthentication no
HostbasedAuthentication no
PermitEmptyPasswords no
ChallengeResponseAuthentication no

# tunneling

X11Forwarding yes
X11DisplayOffset 10
PrintMotd no
PrintLastLog yes

# misc

AcceptEnv {{ [
	'GIT_COMMITTER_EMAIL',
	'GIT_COMMITTER_NAME',
	'GIT_AUTHOR_EMAIL',
	'GIT_AUTHOR_NAME',
	'LANG',
	'LC_*',
] | join (' ') }}

Subsystem sftp /usr/lib/openssh/sftp-server
UsePAM yes

# ex: noet ts=4 filetype=ssh
