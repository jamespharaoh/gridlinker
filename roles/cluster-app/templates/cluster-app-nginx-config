user www-data;
worker_processes 4;
pid /run/nginx.pid;

events {
	worker_connections 768;
}

http {

	sendfile on;
	tcp_nopush on;
	tcp_nodelay on;
	keepalive_timeout 65;
	types_hash_max_size 2048;

	include /etc/nginx/mime.types;
	default_type application/octet-stream;

	access_log /var/log/nginx/access.log;
	error_log /var/log/nginx/error.log;

	gzip on;
	gzip_disable "msie6";

	client_max_body_size 16m;

# ----- upstream servers per deployment -----

{% for deployment_name in cluster_deployment_names %}
{% set deployment = deployments [deployment_name] %}
	upstream deployment-{{ deployment_name }} {
		server {{ deployment.bridge_network }}.5.{{ idx }};
	}
{% endfor %}

{% macro do_deployment (deployment, deployment_alias, target) %}

	# website redirect naked domain to www

	server {

		listen 80;
		listen 443 ssl;

		server_name {{ deployment.main_domain }};

		ssl_certificate /etc/nginx/ssl/{{ deployment_alias.main_domain }}.cert;
		ssl_certificate_key /etc/nginx/ssl/{{ deployment_alias.main_domain }}.key;

		return 301 https://www.{{ deployment.main_domain }}$request_uri;

	}

	# website redirect http to https

	server {

		listen 80;

		server_name www.{{ deployment.main_domain }};

		return 301 https://www.{{ deployment.main_domain }}$request_uri;

	}

	# website

	server {

		listen 443 ssl;

		server_name www.{{ deployment.main_domain }};

		ssl_certificate /etc/nginx/ssl/{{ deployment_alias.main_domain }}.cert;
		ssl_certificate_key /etc/nginx/ssl/{{ deployment_alias.main_domain }}.key;

		add_header Strict-Transport-Security "max-age={{ 60 * 60 * 24 * 365 }}";

		location / {
			proxy_pass http://deployment-{{ target }};
			proxy_set_header Host "{{ deployment.main_domain }}";
		}

		location /keystone {
			auth_basic "Restricted";
			auth_basic_user_file /etc/nginx/htpasswd;
			proxy_pass http://deployment-{{ target }}/keystone;
			proxy_set_header Host "{{ deployment.main_domain }}";
		}

{% if cluster != 'production' %}
		location /robots.txt {
			alias /etc/nginx/dev-robots.txt;
		}
{% endif %}

	}

	# api

	server {

		listen 80;
		listen 443 ssl;

		server_name api.{{ deployment.main_domain }};

		ssl_certificate /etc/nginx/ssl/api.{{ deployment_alias.main_domain }}.cert;
		ssl_certificate_key /etc/nginx/ssl/api.{{ deployment_alias.main_domain }}.key;

		location / {
			proxy_pass http://deployment-{{ target }};
			proxy_set_header Host "api.{{ deployment.main_domain }}";
		}

		location /robots.txt {
			alias /etc/nginx/dev-robots.txt;
		}

	}

	# admin redirect http to https

	server {

		listen 80;

		server_name admin.{{ deployment.main_domain }};

		return 301 https://admin.{{ deployment.main_domain }}$request_uri;

	}

	# api

	server {

		listen 443 ssl;

		server_name admin.{{ deployment.main_domain }};

		ssl_certificate /etc/nginx/ssl/admin.{{ deployment_alias.main_domain }}.cert;
		ssl_certificate_key /etc/nginx/ssl/admin.{{ deployment_alias.main_domain }}.key;

		location / {
			proxy_pass http://deployment-{{ target }};
			proxy_set_header Host "admin.{{ deployment.main_domain }}";
		}

		location /robots.txt {
			alias /etc/nginx/dev-robots.txt;
		}

	}

	# short redirect http to https

	server {

		listen 80;

		server_name {{ deployment.short_domain }};
		server_name www.{{ deployment.short_domain }};

		return 301 https://{{ deployment.short_domain }}$request_uri;

	}

	# short

	server {

		listen 443 ssl;

		server_name {{ deployment.short_domain }};

		ssl_certificate /etc/nginx/ssl/{{ deployment_alias.short_domain }}.cert;
		ssl_certificate_key /etc/nginx/ssl/{{ deployment_alias.short_domain }}.key;

		location / {
			proxy_pass http://deployment-{{ target }};
			proxy_set_header Host "admin.{{ deployment.short_domain }}";
		}

		location /robots.txt {
			alias /etc/nginx/dev-robots.txt;
		}

	}

{% endmacro %}

{% for deployment_alias_name, deployment_alias in deployment_aliases.items ()
	if deployment_alias.cluster == cluster
	and deployment_alias.target is defined %}

# ----- deployment alias {{ deployment_alias.name }} -----
#
# main domain: {{ deployment_alias.main_domain }}
# short domain: {{ deployment_alias.short_domain }}
# target: {{ deployment_alias.target }}
#

{{ do_deployment (
	deployment_alias,
	deployment_alias,
	deployment_alias.target) }}

{% endfor %}

{% for other_deployment_name, other_deployment in deployments.items ()
	if (other_deployment.cluster | default ('none')) == cluster %}

{% if other_deployment.alias is defined %}
{% set other_deployment_alias = deployment_aliases [other_deployment.alias] %}

# ----- deployment {{ other_deployment_name }} -----
#
# main domain: {{ other_deployment.main_domain }}
# short domain: {{ other_deployment.short_domain }}
#
# alias name: {{ other_deployment.alias }}
# main domain: {{ other_deployment_alias.main_domain }}
# short domain: {{ other_deployment_alias.short_domain }}
#

{{ do_deployment (
	other_deployment,
	other_deployment_alias,
	other_deployment_name) }}

{% else %}

# ----- deployment {{ other_deployment_name }} -----
#
# main domain: {{ other_deployment.main_domain }}
# short domain: {{ other_deployment.short_domain }}
#

{{ do_deployment (
	other_deployment,
	other_deployment,
	other_deployment_name) }}

{% endif %}

{% endfor %}

}
