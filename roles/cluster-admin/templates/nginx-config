user www-data;
worker_processes 4;
pid /run/nginx.pid;

events {
	worker_connections 768;
}

http {

	sendfile on;
	tcp_nopush on;
	tcp_nodelay on;
	keepalive_timeout 65;
	types_hash_max_size 2048;

	include /etc/nginx/mime.types;
	default_type application/octet-stream;

	access_log /var/log/nginx/access.log;
	error_log /var/log/nginx/error.log;

	gzip on;
	gzip_disable "msie6";

	include /etc/nginx/conf.d/*.conf;
	include /etc/nginx/sites-enabled/*;

{% for dev_deployment_name in dev_deployment_names %}
{% set dev_deployment = deployments [dev_deployment_name] %}

	upstream {{ dev_deployment_name }} {
		server {{ dev_deployment.bridge_network }}.5.0;
		server {{ dev_deployment.bridge_network }}.5.1;
		server {{ dev_deployment.bridge_network }}.5.2;
	}

	server {

		server_name {{ dev_deployment.private_domain }};
		server_name api.{{ dev_deployment.private_domain }};

		location /robots.txt {
			alias /etc/nginx/dev-robots.txt;
		}

		location / {
			proxy_pass http://{{ dev_deployment_name }}/;
			proxy_set_header Host $host;
		}

	}

{% endfor %}

{% if cluster == 'ops' %}

	server {

		server_name icinga.ops.wistla.com;

		location /cgi-bin/icinga2-classicui {

			root /usr/lib;

			auth_basic "Restricted";
			auth_basic_user_file /etc/icinga2-classicui/htpasswd.users;

			fastcgi_pass unix:/var/run/fcgiwrap.socket;
			include /etc/nginx/fastcgi_params;
			fastcgi_param SCRIPT_FILENAME /usr/lib/$fastcgi_script_name;
			fastcgi_param ICINGA_CGI_CONFIG /etc/icinga2-classicui/cgi.cfg;
			fastcgi_param AUTH_USER $remote_user;
			fastcgi_param REMOTE_USER $remote_user;

		}

		location /icinga2-classicui/stylesheets {
			alias /etc/icinga2-classicui/stylesheets;
		}

		location /icinga2-classicui {
			alias /usr/share/icinga2/classicui;
			auth_basic "Restricted";
			auth_basic_user_file /etc/icinga2-classicui/htpasswd.users;
		}

	}

{% endif %}

}
