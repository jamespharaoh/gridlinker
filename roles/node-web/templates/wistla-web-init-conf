description "wistla webs"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 1 5

script

	cd /home/ubuntu/wistla-web

	setuid ubuntu \
	mkdir --parents logs

	setuid ubuntu \
	{{ 'node-debug --debug-brk=0' if debug == 'yes' else 'nodejs' }} keystone.js \
		> logs/output.txt 2> logs/output.txt

end script
