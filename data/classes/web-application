---

identity:

  name: "web-application"
  type: "class"

class:

  namespace: "host"
  parent_namespace: "host"

  groups:

    - "containers"

container:

  type: "web-application"

start:

  name: "{{ identity_name }}"
  registry: "{{ docker_registry }}"
  image: "{{ docker_images.web_application }}:{{ cluster.build.web_application }}"

  expose:
    - "80"

  ports:
    - "{{ parent.private.address }}:{{ cluster.ports.web_application }}:80"

  volumes_default:
    - "{{ data_dir }}/{{ identity_name }}/config:/config"
    - "{{ data_dir }}/{{ identity_name }}/data:/data"

  volumes_instant:
    - "/home/vagrant/datingnode-super:/var/www/datingnode-super"

  volumes_all: "{{ start_volumes_default + start_volumes_instant }}"
  volumes: "{{ start_volumes_all if instant_deploy == 'yes' else start_volumes_default }}"

  env: {}

  wait:
    - "{{ cluster.ports.web_application }}"

# ex: et ts=2 filetype=yaml
