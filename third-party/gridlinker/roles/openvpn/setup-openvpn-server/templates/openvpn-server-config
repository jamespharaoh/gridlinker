# connection

mode server
proto udp
port 1194

# misc

persist-key
persist-tun
status {{ openvpn_server_name }}.log
client-config-dir clients

# protocol

comp-lzo adaptive
push "comp-lzo adaptive"
keepalive 5 20

# network

dev tun
topology subnet
client-to-client

ifconfig {{ openvpn_server_address }} {{ openvpn_server_netmask }}
ifconfig-pool {{ openvpn_server_pool_start }} {{ openvpn_server_pool_end }}

