#!/bin/bash

function xterm-colour-code {

	local name="$1"
	local code="${XTERM_COLOUR_CODES[$name]}"

	printf '%s' "$code"

}

function xterm-set-foreground {

	local name="$1"
	local code=$(xterm-colour-code "$name")

	printf '\e[38;5;%sm' "$code"

}

function xterm-set-background {

	local name="$1"
	local code=$(xterm-colour-code "$name")

	printf '\e[48;5;%sm' "$code"

}

function xterm-set-colours {

	xterm-set-foreground "$1"
	xterm-set-background "$2"

}

