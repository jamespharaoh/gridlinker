cd /home/vagrant

echo "hi" >&2
ssh-add -l
echo "hi" >&2

if ! test -d "wistla-devops"; then

	echo "=== checking out wistla-devops" >&2

	if test -f /vagrant/id_rsa -a ! -f ~/.ssh/id_rsa; then
		cp /vagrant/id_rsa ~/.ssh/id_rsa
		chmod 0600 ~/.ssh/id_rsa
	fi

	git clone "ssh://git@github.com/wistla/wistla-devops"

fi

cd wistla-devops

if ! test -f config; then

	echo "=== copying config from host" >&2

	cp /vagrant/config config

fi

# ex: noet ts=4 filetype=sh
