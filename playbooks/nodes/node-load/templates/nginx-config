{{ ansible_warning ['#'] }}

user www-data;
worker_processes 4;
pid /run/nginx.pid;

events {
	worker_connections 768;
}

include environment.conf;

http {

	# basic settings

	sendfile on;
	tcp_nopush on;
	tcp_nodelay on;
	keepalive_timeout 65;
	types_hash_max_size 2048;

	include /etc/nginx/mime.types;
	default_type application/octet-stream;

	# logging

	access_log /var/log/nginx/access.log;
	error_log /var/log/nginx/error.log;

	# compression

	gzip on;
	gzip_disable "msie6";

	# proxy defaults

	proxy_connect_timeout 5s;

	if ($debug == 'yes') {
		proxy_read_timeout 10m;
	} else {
		proxy_read_timeout 60s;
	}

	proxy_next_upstream error;

	# upstream servers

	include upstream.conf;

	# api

	server {

		server_name $api_domain;

		if ($deployment_type == 'alias') {
			server_name $api_alias;
		}

		client_max_body_size 16m;

		location / {
			proxy_pass http://api;
			proxy_http_version 1.1;
			proxy_set_header Connection "";
		}

		if ($test_routes_enabled != 'yes') {

			location /TEST {
				deny all;
			}

		}

	}

	# web

	server {

		server_name $web_domain;
		server_name $main_domain;

		if ($deployment_type == 'alias') {
			server_name $web_alias;
			server_name $main_alias;
		}

		client_max_body_size 16m;

		location / {
			proxy_pass http://web;
			proxy_http_version 1.1;
			proxy_set_header Connection "";
		}

		location /in {
			proxy_pass http://browser;
			proxy_http_version 1.1;
			proxy_set_header Connection "";
		}

	}

	# admin

	server {

		server_name $admin_domain;

		if ($deployment_type == 'alias') {
			server_name $admin_alias;
		}

		root /home/ubuntu/wistla-admin;

		location ~* \.(js|css|png|jpg|jpeg|gif|ico)$ {
			expires max;
			log_not_found off;
		}

		location / {
			try_files $uri /index.html;
		}

	}

	# short

	server {

		server_name $short_domain;

		if ($deployment_type == 'alias') {
			server_name $short_alias;
		}

		location / {
			proxy_pass http://browser/in/;
			proxy_http_version 1.1;
			proxy_set_header Connection "";
		}

		location /v/ {
			proxy_pass http://browser/in/registration/verification/;
			proxy_http_version 1.1;
			proxy_set_header Connection "";
		}

	}

	# assets

	server {

		server_name $assets_domain;

		if ($deployment_type == 'alias') {
			server_name $assets_alias;
		}

		location /1/images {
			proxy_pass http://api/images;
			proxy_http_version 1.1;
			proxy_set_header Connection "";
		}

		location /1/audio {
			proxy_pass http://api/audio;
			proxy_http_version 1.1;
			proxy_set_header Connection "";
		}

		location /1/video {
			proxy_pass http://api/video;
			proxy_http_version 1.1;
			proxy_set_header Connection "";
		}

	}

}
