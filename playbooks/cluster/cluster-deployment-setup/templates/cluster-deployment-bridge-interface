auto {{ cluster_deployment.bridge_name }}
iface {{ cluster_deployment.bridge_name }} inet static

	address {{ [
		cluster_deployment.bridge_network,
		instance_index,
		cluster_zone_indices [instance_zone] * 64 + 1,
	] | join ('.') }}
	netmask 255.255.255.192
	broadcast {{ [
		cluster_deployment.bridge_network,
		instance_index,
		cluster_zone_indices [instance_zone] * 64 + 63,
	] | join ('.') }}

	bridge_ports none
	bridge_stp off
	bridge_maxwait 0
	bridge_fd 0
