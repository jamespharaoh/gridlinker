{{ ansible_warning ['#'] }}

user www-data;
worker_processes 4;
pid /run/nginx.pid;

events {
	worker_connections 768;
}

http {

	sendfile on;
	tcp_nopush on;
	tcp_nodelay on;
	keepalive_timeout 65;
	types_hash_max_size 2048;

	include /etc/nginx/mime.types;
	default_type application/octet-stream;

	access_log /var/log/nginx/access.log;
	error_log /var/log/nginx/error.log;

	gzip on;
	gzip_disable "msie6";

	client_max_body_size 16m;

	# default site

	server {

		listen 80;

		server_name {{ inventory_hostname }};

		root /usr/share/nginx/html;

	}

{% if cluster_name == 'ops' %}

{% for dev_deployment_name in dev_deployment_names %}
{% set dev_deployment = deployments [dev_deployment_name] %}

	upstream {{ dev_deployment_name }}-host {
		server {{ dev_deployment.bridge_network }}.0.1;
	}

	upstream {{ dev_deployment_name }}-load {
		server {{ dev_deployment.bridge_network }}.0.4;
		server {{ dev_deployment.bridge_network }}.1.4;
		server {{ dev_deployment.bridge_network }}.2.4;
		server {{ dev_deployment.bridge_network }}.3.4;
	}

	# website redirect to www

	server {

		listen 80;
		listen 443 ssl;

		server_name {{ dev_deployment.main_domain }};

		ssl_certificate /etc/nginx/ssl/{{ dev_deployment.main_domain }}.cert;
		ssl_certificate_key /etc/nginx/ssl/{{ dev_deployment.main_domain }}.key;

		return 301 https://{{ dev_deployment.web_domain }}$request_uri;

	}

	# website redirect to ssl

	server {

		listen 80;

		server_name {{ dev_deployment.web_domain }};

		return 301 https://{{ dev_deployment.web_domain }}$request_uri;

	}

	# website

	server {

		listen 443 ssl;

		ssl_certificate /etc/nginx/ssl/{{ dev_deployment.main_domain }}.cert;
		ssl_certificate_key /etc/nginx/ssl/{{ dev_deployment.main_domain }}.key;

		server_name {{ dev_deployment.web_domain }};

		add_header Strict-Transport-Security "max-age={{ 60 * 60 * 24 * 365 }}";

		location /robots.txt {
			alias /etc/nginx/dev-robots.txt;
		}

		location / {
			proxy_pass http://{{ dev_deployment_name }}-load/;
			proxy_set_header Host $host;
		}

		location /keystone {
			auth_basic "Restricted";
			auth_basic_user_file /etc/nginx/htpasswd;
			proxy_pass http://{{ dev_deployment_name }}-load/keystone;
			proxy_set_header Host $host;
		}

	}

	# api

	server {

		listen 80;
		listen 443 ssl;

		ssl_certificate /etc/nginx/ssl/{{ dev_deployment.api_domain }}.cert;
		ssl_certificate_key /etc/nginx/ssl/{{ dev_deployment.api_domain }}.key;

		server_name {{ dev_deployment.api_domain }};

		location /robots.txt {
			alias /etc/nginx/dev-robots.txt;
		}

		location / {
			proxy_pass http://{{ dev_deployment_name }}-load/;
			proxy_set_header Host $host;
		}

	}

	# admin redirect to ssl

	server {

		listen 80;

		server_name {{ dev_deployment.admin_domain }};

		return 301 https://{{ dev_deployment.admin_domain }}$request_uri;

	}

	# admin

	server {

		listen 443 ssl;

		server_name {{ dev_deployment.admin_domain }};

		ssl_certificate /etc/nginx/ssl/{{ dev_deployment.admin_domain }}.cert;
		ssl_certificate_key /etc/nginx/ssl/{{ dev_deployment.admin_domain }}.key;

		location /robots.txt {
			alias /etc/nginx/dev-robots.txt;
		}

		location / {
			proxy_pass http://{{ dev_deployment_name }}-load/;
			proxy_set_header Host $host;
		}

	}

	# short

	server {

		listen 80;

		server_name {{ dev_deployment.short_domain }};

		return 301 https://{{ dev_deployment.short_domain }}$request_uri;

	}

	server {

		listen 443 ssl;

		ssl_certificate /etc/nginx/ssl/{{ dev_deployment.short_domain }}.cert;
		ssl_certificate_key /etc/nginx/ssl/{{ dev_deployment.short_domain }}.key;

		server_name {{ dev_deployment.short_domain }};

		location /robots.txt {
			alias /etc/nginx/dev-robots.txt;
		}

		location / {
			proxy_pass http://{{ dev_deployment_name }}-load/;
			proxy_set_header Host $host;
		}

	}

{% if 'test_domain' in dev_deployment %}

	# test

	server {

		listen 80;
		listen 443 ssl;

		server_name {{ dev_deployment.test_domain }};

		ssl_certificate /etc/nginx/ssl/{{ dev_deployment.test_domain }}.cert;
		ssl_certificate_key /etc/nginx/ssl/{{ dev_deployment.test_domain }}.key;

		location /robots.txt {
			alias /etc/nginx/dev-robots.txt;
		}

		location / {
			proxy_pass http://{{ dev_deployment_name }}-host/;
			proxy_set_header Host $host;
		}

	}

{% endif %}

	# assets

	server {

		listen 80;
		listen 443 ssl;

		server_name {{ dev_deployment.assets_domain }};

		ssl_certificate /etc/nginx/ssl/{{ dev_deployment.assets_domain }}.cert;
		ssl_certificate_key /etc/nginx/ssl/{{ dev_deployment.assets_domain }}.key;

		location /robots.txt {
			alias /etc/nginx/dev-robots.txt;
		}

		location / {
			proxy_pass http://{{ dev_deployment_name }}-load/;
			proxy_set_header Host {{ dev_deployment.assets_domain }};
		}

	}

