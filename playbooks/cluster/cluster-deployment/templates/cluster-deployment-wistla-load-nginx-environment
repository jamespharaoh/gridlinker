set $main_alias {{ deployment_alias.main_domain }};
set $short_alias {{ deployment_alias.short_domain }};
set $web_alias {{ deployment_alias.web_domain }};

{% elif deployment.type == 'simple' %}

set $deployment_type simple;

{% endif %}

set $debug no;
