{% macro ssl_certificate (name) %}
	ssl_certificate /etc/nginx/ssl/{{ name }}.cert;
	ssl_certificate_key /etc/nginx/ssl/{{ name }}.key;
{% endmacro %}

{% macro listen_http () %}
	listen 80;
	listen 8080 proxy_protocol;
{% endmacro %}

{% macro listen_https () %}
	listen 443 ssl http2;
	listen 8443 ssl http2 proxy_protocol;
{% endmacro %}

{% macro dev_robots () %}
	location /robots.txt {
		alias /etc/nginx/dev-robots.txt;
	}
{% endmacro %}
