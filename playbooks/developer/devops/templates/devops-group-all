{% macro do_secrets (name) %}
{% set filename = lookup ('fileglob', HOME + '/security/third-parties/' + name) %}
{% if filename %}
  {{ name }}: {{ lookup ('file', filename) | from_yaml | to_json }}
{% else %}
  {{ name }}: {}
{% endif %}
{% endmacro %}

