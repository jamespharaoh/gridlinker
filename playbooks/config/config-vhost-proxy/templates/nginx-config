user www-data;
worker_processes 16;
pid /run/nginx.pid;

events {
	worker_connections 2048;
}

http {

	# basic settings

	sendfile on;
	tcp_nopush on;
	tcp_nodelay on;
	keepalive_timeout 65;
	types_hash_max_size 2048;

	# mime types

	include /etc/nginx/mime.types;
	default_type application/octet-stream;

	# proxy settings

	proxy_connect_timeout 1s;
	proxy_read_timeout 60s;

	# fastcgi settings

	fastcgi_buffers 128 32k;

	# logging

	access_log /var/log/nginx/access.log;
	error_log /var/log/nginx/error.log;

	# compression

	gzip on;
	gzip_disable "msie6";

	# various limits

	client_max_body_size 19m;
	server_names_hash_bucket_size 1024;

	# load balancer

{% for trusted_ip in trusted_ips %}
	set_real_ip_from {{ trusted_ip }};
{% endfor %}

	real_ip_header X-Forwarded-For;

{% for cluster_name, cluster in clusters.iteritems ()
if 'ports' in cluster %}

	upstream {{ cluster_name }} {
{% for vm_address in vm_addresses %}
		server {{ vm_address }}:{{ cluster.ports.web_application }};
{% endfor %}
	}

{% if cluster_name == 'live' %}

	server {

		listen 80 default_server;

		location / {
			proxy_pass http://{{ cluster_name }};
			proxy_set_header Host $host;
		}

	}

{% endif %}

{% set cluster_all_ssl_domains = []
	| union (cluster.own_ssl_domains | default ([]))	
	| union (cluster.full_ssl_domains | default ([]))
%}

{% for base_domain in base_ssl_domains %}
{% if cluster_name == 'live' %}
{% set ssl_domain = base_domain %}
{% else %}
{% set ssl_domain = base_domain + '.' + cluster.cluster.domain_suffix %}
{% endif %}

	server {

		listen 80;
		server_name {{ ssl_domain }};

		return 301 https://{{ ssl_domain }}$request_uri;

{% if cluster_name != 'live' %}
		add_header X-Robots-Tag "noindex, nofollow";
{% endif %}

		add_header Strict-Transport-Security "max-age={{ 60 * 60 * 24 * 365 }}";

{% if cluster.cluster.whitelist_active %}
{% for whitelist_ip in whitelist_ips %}
		allow {{ whitelist_ip }};
{% endfor %}
		deny all;
{% endif %}

	}

	server {

		listen 443 ssl;

		server_name {{ ssl_domain }};

		ssl on;
		ssl_certificate /config/ssl/{{ ssl_domain }}.cert;
		ssl_certificate_key /config/ssl/{{ ssl_domain }}.key;

{% if cluster.cluster.whitelist_active == 'yes' %}
{% for whitelist_ip in whitelist_ips %}
		allow {{ whitelist_ip }};
{% endfor %}
		deny all;
{% endif %}

{% if cluster_name != 'live' %}
		add_header X-Robots-Tag "noindex, nofollow";
{% endif %}

		add_header Strict-Transport-Security "max-age={{ 60 * 60 * 24 * 365 }}";

		location / {
			proxy_pass http://{{ cluster_name }};
			proxy_set_header Host $host;
		}
		
	}

{% endfor %}

	server {

		listen 80;
		server_name ~\.{{ cluster.cluster.domain_suffix | replace ('.', '\.') }}$;

{% if cluster.cluster.whitelist_active == 'yes' %}
{% for whitelist_ip in whitelist_ips %}
		allow {{ whitelist_ip }};
{% endfor %}
		deny all;
{% endif %}

{% if cluster_name != 'live' %}
		add_header X-Robots-Tag "noindex, nofollow";
{% endif %}

		location / {
			proxy_pass http://{{ cluster_name }};
			proxy_set_header Host $host;
		}

	}

{% endfor %}

{% for other_vhost_server in other_vhost_servers | default ([]) %}
{% for domain in other_vhost_server.domains %}

	server {

		listen 80;

		server_name {{ domain }};
		server_name www.{{ domain }};

		return 301 https://{{ domain }}$request_uri;

		add_header Strict-Transport-Security "max-age={{ 60 * 60 * 24 * 365 }}";

	}

	server {

		listen 443 ssl;

		server_name {{ domain }};
		server_name www.{{ domain }};

		ssl on;
		ssl_certificate /config/ssl/{{ domain }}.cert;
		ssl_certificate_key /config/ssl/{{ domain }}.key;

		add_header Strict-Transport-Security "max-age={{ 60 * 60 * 24 * 365 }}";

		location / {
			proxy_pass http://{{ other_vhost_server.name }}.vpn;
			proxy_set_header Host $host;
		}
		
	}

{% endfor %}
{% endfor %}

}
