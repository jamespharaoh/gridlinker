# {{ ansible_managed }}

<VirtualHost *:80>

	ServerName {{ item.main_domain }}
	ServerAlias {{ item.main_domain }}.datingnode.com
	ServerAlias {{ item.main_domain }}.{{ cluster.cluster.domain_suffix }}

{% for alias in item.main_alias %}
	ServerAlias {{ alias }}
	ServerAlias {{ alias }}.{{ cluster.cluster.domain_suffix }}
{% endfor %}

	ServerAdmin {{ server_admin_email }}

	SetEnv SERVICE_ID {{ item.service_id }}
	SetEnv SERVICE_DOMAIN {{ item.main_domain }}
	SetEnv SERVICE_DOMAIN_API {{ item.api_domain }}
	SetEnv SERVICE_DOMAIN_CDN {{ item.cdn_domain }}
	SetEnv DATINGNODE_ENVIRONMENT_CONFIG /var/www/datingnode-config.json

	DocumentRoot {{ platform_super_dir }}

	<Directory {{ platform_super_dir }}/>

		Options FollowSymLinks
		AllowOverride none
		Require all granted


		RewriteEngine on

		# FIXME: it's linking to the old project...
        RewriteRule ^v[^/]*/d/css/(.*)$ 	{{platform_super_dir}}/datingnode/www/css/$1 [L,END]
        RewriteRule ^v[^/]*/d/img/(.*)$ 	{{platform_super_dir}}/datingnode/www/img/$1 [L,END]
        RewriteRule ^v[^/]*/d/js/(.*)$ 		{{platform_super_dir}}/datingnode/www/js/$1 [L,END]
        RewriteRule ^v[^/]*/d/font/(.*)$ 	{{platform_super_dir}}/datingnode/www/font/$1 [L,END]

		# Service files
        RewriteRule ^v[^/]*/css/(.*)$ 		{{platform_super_dir}}/services/{{ item.main_domain }}/css/$1 [L,END]
        RewriteRule ^v[^/]*/img/(.*)$ 		{{platform_super_dir}}/services/{{ item.main_domain }}/img/$1 [L,END]
        RewriteRule ^v[^/]*/js/(.*)$ 		{{platform_super_dir}}/services/{{ item.main_domain }}/js/$1 [L,END]
        RewriteRule ^v[^/]*/font/(.*)$ 		{{platform_super_dir}}/services/{{ item.main_domain }}/font/$1 [L,END]

		
		# Favicons
        RewriteRule ^([favicon|apple\-touch\-icon|mstile|android\-chrome]+(|-[\d]+x[\d]+)+.[ico|png]+)$		{{platform_super_dir}}/services/{{ item.main_domain }}/img/favicons/$1 [L,END]
        RewriteRule ^browserconfig\.xml$	{{platform_super_dir}}/services/{{ item.main_domain }}/img/favicons/browserconfig.xml [L,END]
        RewriteRule ^manifest\.json$			{{platform_super_dir}}/services/{{ item.main_domain }}/img/favicons/manifest.json [L,END]
        

        RewriteCond %{REQUEST_URI} !php$
        RewriteCond %{REQUEST_URI} !services/
        RewriteCond %{REQUEST_URI} !app-web/www/
        RewriteRule ^(.*)$ fcgi://127.0.0.1:9000/var/www/datingnode-super/app-web/pipe.php [P]

	</Directory>

	ProxyPassMatch ^/(.*\.php(/.*)?)$ fcgi://127.0.0.1:9000{{platform_super_dir}}app-web/$1

	<Location />

		<IfModule mod_filter.c>
		<IfModule mod_deflate.c>

			AddOutputFilterByType DEFLATE application/atom+xml \
				application/javascript \
				application/json \
				application/rss+xml \
				application/vnd.ms-fontobject \
				application/x-font-ttf \
				application/xhtml+xml \
				application/xml \
				font/opentype \
				image/svg+xml \
				image/x-icon \
				text/css \
				text/html \
				text/plain \
				text/x-component \
				text/xml

		</IfModule>
		</IfModule>

	</Location>

	CustomLog {{ platform_log_dir }}/app-web-apache-access.log combined
	ErrorLog {{ platform_log_dir }}/app-web-apache-error.log
	LogLevel warn

	RewriteEngine On
#	RewriteCond %{HTTP_HOST} !^www\.
#	RewriteRule ^(.*)$ http://www.%{HTTP_HOST}$1 [R=301,L]


</VirtualHost>
