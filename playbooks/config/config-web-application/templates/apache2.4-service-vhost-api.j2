# {{ ansible_managed }}

<VirtualHost *:80>

	ServerName {{ item.api_domain }}
	ServerAlias {{ item.api_domain }}.{{ cluster.cluster.domain_suffix }}

{% for discreet_domain in discreet_api_domains %}
	ServerAlias a{{ item.service_id }}.{{ discreet_domain }}
	ServerAlias a{{ item.service_id }}.{{ discreet_domain }}.{{ cluster.cluster.domain_suffix }}
{% endfor %}

	ServerAdmin {{ server_admin_email }}

	DocumentRoot {{ platform_super_dir }}

	SetEnv SERVICE_ID {{ item.service_id }}
	SetEnv SERVICE_DOMAIN {{ item.main_domain }}
	SetEnv SERVICE_DOMAIN_API {{ item.api_domain }}
	SetEnv SERVICE_DOMAIN_CDN {{ item.cdn_domain }}
	SetEnv DATINGNODE_ENVIRONMENT_CONFIG /var/www/datingnode-config.json

	<Directory {{ platform_super_dir }}>

		Options FollowSymLinks
		AllowOverride none
		Require all granted

		RewriteEngine on
        RewriteCond %{REQUEST_URI} !php$
        RewriteRule ^(.*)$ fcgi://127.0.0.1:9000{{platform_super_dir}}/api/pipe.php [P]

	</Directory>

	ProxyPassMatch ^/(.*\.php(/.*)?)$ fcgi://127.0.0.1:9000{{platform_super_dir}}$1

	<Location />
		<IfModule mod_filter.c>
		<IfModule mod_deflate.c>
		AddOutputFilterByType DEFLATE application/atom+xml \
			application/javascript \
			application/json \
			application/rss+xml \
			application/vnd.ms-fontobject \
			application/x-font-ttf \
			application/xhtml+xml \
			application/xml \
			font/opentype \
			image/svg+xml \
			image/x-icon \
			text/css \
			text/html \
			text/plain \
			text/x-component \
			text/xml
		</IfModule>
		</IfModule>
	</Location>

	CustomLog {{ platform_log_dir }}/api-apache-access.log combined
	ErrorLog {{ platform_log_dir }}/api-apache-error.log
	LogLevel warn

</VirtualHost>
