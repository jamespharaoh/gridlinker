{{ ansible_warning ['//'] }}

apply Service "ping4" {

	import "generic-service"

	check_command = "ping4"

	command_endpoint = host.command_endpoint

	assign where true

}

apply Service "ssh" {

	import "generic-service"

	check_command = "ssh"

	command_endpoint = host.command_endpoint

	assign where true

}

apply Service for (disk => config in host.vars.disks) {

	import "generic-service"

	check_command = "disk"

	command_endpoint = host.vars.endpoint

	vars += config

	assign where true

}

apply Service "load" {

	import "generic-service"

	check_command = "load"

	command_endpoint = host.vars.endpoint

	assign where true

}

apply Service "procs" {

	import "generic-service"

	check_command = "procs"

	command_endpoint = host.vars.endpoint

	assign where true

}

apply Service "swap" {

	import "generic-service"

	check_command = "swap"

	command_endpoint = host.vars.endpoint

	assign where true

}

apply Service "users" {

	import "generic-service"

	check_command = "users"

	command_endpoint = host.vars.endpoint

	assign where true

}

apply Service "mail queue" {

	import "generic-service"

	check_command = "check-postfix-mail-queue"

	command_endpoint = host.vars.endpoint

	assign where true

}
