{% if item.0 == 'ops' %}

apply Service "ping4" {

	import "generic-service"

	check_command = "ping4"

	command_endpoint = host.command_endpoint

	assign where true

}

apply Service "ssh" {

	import "generic-service"

	check_command = "ssh"

	command_endpoint = host.command_endpoint

	assign where true

}

apply Service for (disk => config in host.vars.disks) {

	import "generic-service"

	check_command = "disk"

	command_endpoint = host.vars.endpoint

	vars += config

	assign where true

}

